
<% provide(:title, 'Home') %>
    <!-- Carousel
    ================================================== -->
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
      <!-- Indicators -->
      <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
        <li data-target="#myCarousel" data-slide-to="3"></li>
      </ol>
      <div class="carousel-inner img-responsive">
        <div class="item active">
          <%= image_tag("slide4.jpg", alt: "Mullen Labs") %>
          <div class="container">
            <div class="carousel-caption">
              
            </div>
          </div>
        </div>
        <div class="item">
          <%= image_tag("slide2v3.jpg", alt: "Large format landscape print") %>
          <div class="container">
            <div class="carousel-caption">
              <h1>Match Your Space</h1>
              <p>Custom formats for a perfect match to your space. Bring your memories to life.</p>
            </div>
          </div>
        </div>
        <div class="item">
          <%= image_tag("slide3.jpg", alt: "Mullen Labs") %>
          <div class="container">
            <div class="carousel-caption">
              <h1>Quality</h1>
              <p>The best materials meet dedicated craftsmanship.</p>
            </div>
          </div>
        </div>
        <div class="item">
          <%= image_tag("slide1.jpg", alt: "Krav Maga Extreme Facemounting Example", class: "img-responsive") %>
          <div class="container">
            <div class="carousel-caption">
              <h1>Custom Sizes</h1>
              <p>Large format digital prints custom mounted and tailored to your commercial space for maximum impact.</p>
            </div>
          </div>
        </div>
      </div>
      <a class="left carousel-control" href="#myCarousel" data-slide="prev"></a>
      <a class="right carousel-control" href="#myCarousel" data-slide="next"></a>
    </div><!-- /.carousel -->
